package newPackage;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.Select;

public class WebElementClass extends TestClass {

	public void dropBox(WebDriver driver, String path, String source) throws InterruptedException {
		//System.out.println(driver.findElement(By.xpath(path)));
		WebElement drpSource = driver.findElement(By.xpath(path));
		Select Source = new Select(drpSource);
		Source.selectByVisibleText(source);
		Thread.sleep(1000);
	}
	
	public void clickButton(WebDriver driver, String path) throws InterruptedException {
		//System.out.println(driver.findElement(By.xpath(path)));
		driver.findElement(By.xpath("//*[@value='Find Flights']")).click();;
		Thread.sleep(1000);
	}
}
